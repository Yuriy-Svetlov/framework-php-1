# Задаём кодировку htaccess
  AddDefaultCharset UTF-8


Options +FollowSymLinks
IndexIgnore */*


RewriteEngine On



#запрет на отображение содержимого каталога при отсутствии индексного файла Также в конфигурационном файле апача нужно включить дополнительные настройки а то не будет работать
Options -Indexes


# if a directory or a file exists, use it directly
 RewriteCond %{REQUEST_FILENAME} !-f
 RewriteCond %{REQUEST_FILENAME} !-d


# otherwise forward it to index.php
RewriteRule ^(.*)$ index.php [QSA,L]






























